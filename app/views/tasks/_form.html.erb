<%= form_for(task) do |f| %>
 <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
          <% task.errors.full_tasks.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label :status, 'タスク' %>
    <%= f.text_field :status %>

    <%= f.label :cotent, 'メッセージ' %>
    <%= f.text_field :cotent %>

    <%= f.submit '追記' %>
<% end %>