<div class="row">
  <div class="col-lg-3"></div>
  <div class="col-lg-offset-3 col-lg-3"></div>
  <div class="col-md-4"></div>
  <div class="col-md-offset-2 col-md-4"></div>
  <div class="col-sm-12"></div>
    
    <%= form_for(task) do |f| %>
     <% if task.errors.any? %>
        <div class="alert alert-warning">
          <ul>
              <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
              <% end %>
          </ul>
        </div>
      <% end %>
  
      <div class="form-group">
        <%= f.label :status, 'ステータス' %>
        <%= f.text_field :status %>
      </div>

      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content %>
      </div>

        <%= f.submit '追記', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>